<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blackboard"
    tools:context="com.example.cristina.triviagame.AboutUs">



    <Button
        android:id="@+id/BackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Main"
        android:onClick="startGame"
        android:layout_gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FindX!"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@android:color/darker_gray"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developpers:"
        android:id="@+id/textViewBeg"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cristina Dumitrescu"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:layout_below="@+id/textViewBeg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ana Dima"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ana Pirvulescu"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DAPM 2014/2015"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@android:color/darker_gray"
        android:textSize="30dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

</RelativeLayout>
